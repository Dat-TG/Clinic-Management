<div class="card">
    <div class="card-body">
        <div class="container mb-5 mt-3">
            <div class="row d-flex align-items-baseline">
                <div class="col-xl-9">
                    <p style="color: #7e8d9f;font-size: 20px;">PHIẾU KHÁM BỆNH
                    </p>
                </div>
                <div class="col-xl-3 float-end">
                    <a type="button" class="btn btn-light text-capitalize border-0" id="btnPrint"
                        data-bs-ripple-color="dark"><i class="fas fa-print text-primary"></i> Print</a>
                </div>
                <hr>
            </div>

            <div class="container" id="printPDF">
                <div class="col-md-12">
                    <div class="text-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-file-medical" viewBox="0 0 16 16">
                            <path
                                d="M8.5 4.5a.5.5 0 0 0-1 0v.634l-.549-.317a.5.5 0 1 0-.5.866L7 6l-.549.317a.5.5 0 1 0 .5.866l.549-.317V7.5a.5.5 0 1 0 1 0v-.634l.549.317a.5.5 0 1 0 .5-.866L9 6l.549-.317a.5.5 0 1 0-.5-.866l-.549.317V4.5zM5.5 9a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zm0 2a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5z" />
                            <path
                                d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z" />
                        </svg>
                        <p class="pt-0">PHÒNG KHÁM GROUP21</p>
                    </div>

                </div>


                <div class="row">
                    <div class="col-xl-8">
                        <form class="form-inline" id="invoiceForm" action="/tai-lieu/xuat-hoa-don" method="post">
                            <div class="row g-3 align-items-center mb-auto">
                                <div class="col-auto">
                                    Bệnh nhân:
                                </div>
                                <div class="col-auto">
                                    {{data.Name}}
                                </div>
                            </div>
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    Ngày sinh:
                                </div>
                                <div class="col-auto">
                                    {{data.DOB}}
                                </div>
                            </div>
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    Địa chỉ:
                                </div>
                                <div class="col-auto">
                                    {{data.Address}}
                                </div>
                            </div>
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    Chẩn đoán:
                                </div>
                                <div class="col-auto">
                                    {{data.Diagnosis}}
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-xl-4">
                        <p class="text-muted">Phiếu khám bệnh</p>
                        <ul class="list-unstyled">
                            <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                                    class="fw-bold">Ngày tạo: </span><span>{{data.Date}}, {{data.Time}}</span></li>
                            <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                                    class="fw-bold">Bác sĩ chẩn đoán: </span><span>{{data.DoctorName}}</span></li>
                        </ul>
                    </div>
                </div>

                <div class="row my-2 mx-1 justify-content-center">
                    <table class="table table-striped table-borderless auto-index">
                        <thead style="background-color:#84B0CA ;" class="text-white">
                            <tr>
                                <th scope="col" class="text-center">STT</th>
                                <th scope="col" class="text-center">Tên thuốc/dịch vụ</th>
                                <th scope="col" class="text-center">Đơn vị tính</th>
                                <th scope="col" class="text-center">Số lượng</th>
                                <th scope="col" class="text-center">Đơn giá</th>
                                <th scope="col" class="text-center">Tổng cộng</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each drugs}}
                            <tr class="text-center">
                                <td class="text-center">

                                </td>
                                <td>
                                    {{Name}}
                                </td>
                                <td>
                                    {{Unit}}
                                </td>
                                <td>
                                    {{Quantity}}
                                </td>
                                <td>
                                    {{Price}}
                                </td>
                                <td>
                                    {{Total}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-xl-6">
                    </div>
                    <div class="col-xl-6">
                        <p class="text-black float-start"><span class="text-black me-3">Tổng số tiền cần thanh
                                toán:</span><span style="font-size: 25px;"><input type="number" readonly required
                                    value="{{data.AllTotal}}" id="AllTotal" name="AllTotal" form="invoiceForm" class="border-0"></span>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>